<?xml version="1.0" encoding="utf-8"?>
<github.skcodestack.nestedrefreshloadmore.header.JdRefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center">



    <ImageView
        android:id="@+id/ivSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ivRefresh"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/jd_speed" />

    <ImageView
        android:id="@+id/ivRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/animation_list_refresh_jd" />
    </RelativeLayout>
</github.skcodestack.nestedrefreshloadmore.header.JdRefreshHeaderView>